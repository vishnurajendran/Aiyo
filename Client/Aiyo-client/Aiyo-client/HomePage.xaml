<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aiyo_Client.HomePage"
             Title="Aiyo!" MinimumWidthRequest="725" MinimumHeightRequest="325">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!-- Left Panel -->
        <VerticalStackLayout x:Name="historyLayout" BackgroundColor="Green" Grid.Column="0">
        </VerticalStackLayout>
        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <!-- Row definitions -->
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!-- Messages Area -->
            <VerticalStackLayout x:Name="messagesArea" BackgroundColor="Red" Grid.Row="0">
            </VerticalStackLayout>

            <!-- Typing definitions -->
            <VerticalStackLayout x:Name="typingArea" BackgroundColor="Yellow" Grid.Row="1">
            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>